<launch>
  <!-- Arguments -->
  <arg name="map_file" default="$(find robot_navigation)/maps/map.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>
  
  <node pkg="map_server" type="map_server" name="map_server" args="$(arg map_file)"/>

  <include file="$(find robot_bringup)/launch/robot_remote.launch"/>

  <!-- AMCL -->
  <!-- <include file="$(find robot_navigation)/launch/amcl.launch"/> -->

  <!-- move_base -->
  <include file="$(find robot_navigation)/launch/robot_movebase.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find robot_bringup)/config/robot_mapping.rviz"/>
  </group>
</launch>
